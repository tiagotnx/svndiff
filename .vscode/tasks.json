{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "go",
      "args": ["build", "-v", "."],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$go"
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "go",
      "args": ["test", "-v", "./..."],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$go"
    },
    {
      "label": "Test with Coverage",
      "type": "shell",
      "command": "./scripts/test-coverage.sh",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": "Make Scripts Executable"
    },
    {
      "label": "Integration Tests",
      "type": "shell",
      "command": "./scripts/integration-tests.sh",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": "Make Scripts Executable"
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "golangci-lint",
      "args": ["run"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "owner": "golangci-lint",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": "^(.+?):(\\d+):(\\d+):\\s+(\\w+):\\s+(.+)\\s+\\((.+)\\)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5,
              "code": 6
            }
          ]
        }
      ]
    },
    {
      "label": "Run with Air (Hot Reload)",
      "type": "shell",
      "command": "air",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "go",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^building\\.\\.\\.$",
          "endsPattern": "^running\\.\\.\\.$"
        }
      }
    },
    {
      "label": "Build Multi-platform",
      "type": "shell",
      "command": "make",
      "args": ["build-all"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Install Git Hooks",
      "type": "shell",
      "command": "./scripts/install-hooks.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": "Make Scripts Executable"
    },
    {
      "label": "Make Scripts Executable",
      "type": "shell",
      "command": "chmod",
      "args": ["+x", "scripts/*.sh"],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "shell": {
          "executable": "/bin/bash"
        }
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
